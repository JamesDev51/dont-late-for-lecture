<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/warning"
            android:id="@+id/imageView"
            android:padding="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" />

    <TextView
            android:text="화전"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_departure"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />

    <TextView
            android:text="경의선"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_ln_departure"
            app:layout_constraintStart_toStartOf="@+id/txt_departure"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:textSize="10sp" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_arrow_right_alt_24"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/txt_departure"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp" />

    <TextView
            android:text="홍대입구"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_arrival"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold" />

    <TextView
            android:text="2호선"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_ln_arrival"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="@+id/txt_arrival"
            android:textSize="10sp" />

    <CheckBox
            android:layout_width="37dp"
            android:layout_height="39dp"
            android:id="@+id/chk_del"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="38dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="300dp" />
</androidx.constraintlayout.widget.ConstraintLayout>